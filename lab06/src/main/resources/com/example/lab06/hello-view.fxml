<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab06.HelloController">
    <center>
        <Canvas fx:id="canvas" height="250" width="300" />


    </center>
    <right>
        <PieChart id="pieChart" fx:id="pieChart" BorderPane.alignment="CENTER" />
    </right>
    <left>
        <BarChart fx:id="barChart" BorderPane.alignment="CENTER">
            <xAxis>
                <CategoryAxis side="BOTTOM" />
            </xAxis>
            <yAxis>
                <NumberAxis side="LEFT" />
            </yAxis>
        </BarChart>
    </left>
</BorderPane>
