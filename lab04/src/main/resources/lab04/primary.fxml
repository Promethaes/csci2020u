<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="30.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lab04.PrimaryController">
   <children>
      <GridPane alignment="CENTER" hgap = "100.0" vgap = "5.0">
            <Label  text="Username: " GridPane.columnIndex = "0" GridPane.rowIndex = "0"
            GridPane.columnSpan = "2"/>
            <TextField fx:id = "user" GridPane.columnIndex = "1" GridPane.rowIndex = "0"
            GridPane.columnSpan = "2"/>

            <Label  text="Password: " GridPane.columnIndex = "0" GridPane.rowIndex = "1"
            GridPane.columnSpan = "2"/>
            <PasswordField fx:id = "pass" GridPane.columnIndex = "1" GridPane.rowIndex = "1"
            GridPane.columnSpan = "2"/>

            <Label  text="Full Name: " GridPane.columnIndex = "0" GridPane.rowIndex = "2"
            GridPane.columnSpan = "2"/>
            <TextField fx:id = "name" GridPane.columnIndex = "1" GridPane.rowIndex = "2"
            GridPane.columnSpan = "2"/>

            <Label  text="Email: " GridPane.columnIndex = "0" GridPane.rowIndex = "3"
            GridPane.columnSpan = "2"/>
            <TextField fx:id = "email" GridPane.columnIndex = "1" GridPane.rowIndex = "3"
            GridPane.columnSpan = "2"/>

            <Label  text="Phone #: " GridPane.columnIndex = "0" GridPane.rowIndex = "4"
            GridPane.columnSpan = "2"/>
            <TextField fx:id = "phone" GridPane.columnIndex = "1" GridPane.rowIndex = "4"
            GridPane.columnSpan = "2"/>

            <Label  text="Date of Birth: " GridPane.columnIndex = "0" GridPane.rowIndex = "5"
            GridPane.columnSpan = "2"/>
            <DatePicker fx:id = "date" GridPane.columnIndex = "1" GridPane.rowIndex = "5"
            GridPane.columnSpan = "2"/>
      
         </GridPane>
      <Button fx:id="primaryButton" text="Register" onAction="#printInput" />
   </children>
</VBox> <!-- <HBox>
